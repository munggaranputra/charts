<script type="text/javascript">
    $(document).ready(function () {
        eCharts();
        MorrisJS();
        
    });

    function MorrisJS() {

        Morris.Donut({
            element: 'pie-chart',
            data: [
                { label: "Friends", value: 30 },
                { label: "Allies", value: 15 },
                { label: "Enemies", value: 45 },
                { label: "Neutral", value: 10 }
            ]
        });
    }


    function eCharts() {
        // Get the DOM element where the chart will be rendered
        var dom = document.getElementById("piechart");

        // Initialize the chart with the correct configuration options
        var myChart = echarts.init(dom, null, {
            renderer: 'canvas',  // Renderer option (optional)
            useDirtyRect: false  // Option to control dirty rects (optional)
        });

        // Define the chart option
        var option = {
            tooltip: {
                trigger: 'item'  // Tooltip configuration
            },
            legend: {
                top: '5%',  // Positioning of legend
                left: 'center'
            },
            series: [
                {
                    name: 'Access From',  // The name for the pie chart
                    type: 'pie',  // Pie chart type
                    radius: ['40%', '70%'],  // Pie chart radius range
                    avoidLabelOverlap: false,
                    itemStyle: {
                        borderRadius: 10,  // Rounded border for the pie sections
                        borderColor: '#fff',  // Border color
                        borderWidth: 2  // Border width
                    },
                    label: {
                        show: false,  // Disable labels in the center of the pie chart
                        position: 'center'
                    },
                    emphasis: {
                        label: {
                            show: true,  // Show labels on emphasis (hover effect)
                            fontSize: 40,
                            fontWeight: 'bold'
                        }
                    },
                    labelLine: {
                        show: false  // Hide label lines
                    },
                    data: [
                        { value: 1048, name: 'Search Engine' },
                        { value: 735, name: 'Direct' },
                        { value: 580, name: 'Email' },
                        { value: 484, name: 'Union Ads' },
                        { value: 300, name: 'Video Ads' }
                    ]
                }
            ]
        };

        // Set the chart options if they are defined
        if (option && typeof option === 'object') {
            myChart.setOption(option);
        }

        // Add a resize event listener to make the chart responsive
        window.addEventListener('resize', myChart.resize);
    }

</script>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  const ctx = document.getElementById('myPieChart').getContext('2d');

  // Data and Config
  const data = {
    labels: ['Red', 'Blue', 'Yellow', 'Green', 'Purple', 'Orange'], // Categories
    datasets: [{
      data: [12, 19, 3, 5, 2, 3], // Data values
      backgroundColor: [
        'rgba(255, 99, 132, 0.6)', // Colors for each slice
        'rgba(54, 162, 235, 0.6)',
        'rgba(255, 206, 86, 0.6)',
        'rgba(75, 192, 192, 0.6)',
        'rgba(153, 102, 255, 0.6)',
        'rgba(255, 159, 64, 0.6)'
      ],
      borderColor: [
        'rgba(255, 99, 132, 1)', // Border color for each slice
        'rgba(54, 162, 235, 1)',
        'rgba(255, 206, 86, 1)',
        'rgba(75, 192, 192, 1)',
        'rgba(153, 102, 255, 1)',
        'rgba(255, 159, 64, 1)'
      ],
      borderWidth: 1 // Border width
    }]
  };

  const options = {
    responsive: true, // Automatically adjusts to screen size
    plugins: {
      legend: {
        position: 'top', // Positions: 'top', 'left', 'right', 'bottom'
      },
      tooltip: {
        enabled: true // Show tooltips on hover
      }
    }
  };

  // Create Chart
  new Chart(ctx, {
    type: 'pie', // Specify chart type
    data: data,
    options: options
  });
</script>


